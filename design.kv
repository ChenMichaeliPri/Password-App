<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "Password Manager"
            TextInput:
                hint_text: "ID - Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Insert your new password below :"
        TextInput:
            id: password
            hint_text: "New password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up completed successfully!"
        Button:
            text: "Back to Login page"
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Extract required password :"
        TextInput:
            id: required_password
            hint_text: "Fill in the required password"
        Button:
            text: "Submit"
            on_press: root.extract_password(root.ids.required_password.text)
    GridLayout:
        cols: 1
        Label:
            text: "Add new password :"
        TextInput:
            id: new_password_name
            hint_text: "Fill in the password's purpose / name"
        TextInput:
            id: new_password
            hint_text: "Fill in the password"
        Button:
            text: "Submit"
            on_press: root.add_password(root.ids.new_password_name.text, root.ids.new_password.text)

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
