<LoginScreen>:
    canvas.before:
        Color:
            rgba: (36/255, 117/255, 173/255, 0.8)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 10, 10
            Label:
                text: "Password Manager"
                font_size: '35sp'
                font_name: "Papyrus"
            RelativeLayout:
                TextInput:
                    id: user_id
                    hint_text: "User id"
                    size_hint: 0.7, 0.4
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    background_color: 1, 1, 1, 0
                    foreground_color: [1, 1, 1, 1]
                    hint_text_color: [1, 1, 1, 1]
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line:
                            points: self.x + 8, self.y, self.x + self.width - 20, self.y
                            width: 1
            RelativeLayout:
                TextInput:
                    id: user_password
                    password: True
                    hint_text: "User Password"
                    size_hint: 0.7, 0.4
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    background_color: 1, 1, 1, 0
                    foreground_color: [1, 1, 1, 1]
                    hint_text_color: [1, 1, 1, 1]
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line:
                            points: self.x + 8, self.y, self.x + self.width - 20, self.y
                            width: 1
            Label:
                id: login_wrong
                text: ""
            RelativeLayout:
                Button:
                    text: "Login"
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    on_press: root.login(root.ids.user_id.text, root.ids.user_password.text)
                    opacity: 1 if self.state == 'normal' else 0.5
                    background_color: 1, 1, 1, 0

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password ?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 1, 1, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                on_press: root.sign_up()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 1, 1, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 10, 10
        Label:
            text: "Insert your new id below :"
        TextInput:
            id: id
            hint_text: "New id"
        Label:
            text: "Insert your new password below :"
        TextInput:
            id: password
            hint_text: "New password"
        Label:
            id: username_taken
            text: ""
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.id.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up completed successfully!"
        Button:
            text: "Back to Login page"
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Button:
                text: "Logout"
                on_press: root.log_out()
            Label:
                text: "Extract required password :"
            TextInput:
                id: required_password
                hint_text: "Fill in the required password"
            Button:
                text: "Submit"
                on_press: root.extract_password(root.ids.required_password.text)
            Label:
                id: required_password_output
                text: ""
        GridLayout:
            cols: 1

            Label:
                text: "Add new password :"
            TextInput:
                id: new_password_name
                hint_text: "Fill in the password's purpose / name"
            TextInput:
                id: new_password
                hint_text: "Fill in the password"
            Button:
                text: "Submit"
                on_press: root.add_password(root.ids.new_password_name.text, root.ids.new_password.text)

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
